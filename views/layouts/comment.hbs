<li>
    {{ comment.body }}
    <small>Submitted by {{ comment.user.name }}</small>
    <form method="post" action="/comments/new">
        <textarea class="form-control" name="body" placeholder="Add a Reply"></textarea>
        <input type="hidden" name="commentable_id" value="{{ comment.id }}" />
        <button class="btn btn-primary btn-sm">Add reply</button>
    </form>
    <ul>
        {{>comment comment=comment.comments }}
    </ul>
</li>